    <Button
        android:id="@+id/bt_calc"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Calculate My GPA"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gp_table"
        android:background="@drawable/viewstyle2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="39dp"
        android:id="@+id/et_semester"
        android:hint="Enter Semester"
        android:layout_marginTop="20dp"
         android:layout_centerHorizontal="true"
        />
    <Spinner
        android:id="@+id/spinner_tnu"
        android:dropDownWidth="70dp"
        android:layout_width="225dp"
        android:layout_height="37dp"
        android:backgroundTint="@color/colorNames"
        android:layout_alignParentEnd="true"
        android:entries="@array/tnu"
        android:layout_below="@id/et_semester">

    </Spinner>
